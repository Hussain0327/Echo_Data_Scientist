[sqlfluff]
# Dialect for PostgreSQL
dialect = postgres

# Templater for dbt
templater = dbt

# Set max line length
max_line_length = 120

# Exclude certain paths
exclude_rules = L031

# Number of passes to run
runaway_limit = 10

[sqlfluff:templater:dbt]
# dbt project configuration
project_dir = ./dbt
profiles_dir = ./dbt
profile = echo
target = dev

[sqlfluff:indentation]
# Indentation settings
indent_unit = space
tab_space_size = 4
indented_joins = False
indented_ctes = True
indented_using_on = True
indented_on_contents = True

[sqlfluff:layout:type:comma]
# Trailing commas (dbt style)
line_position = trailing

[sqlfluff:rules:capitalisation.keywords]
# Keywords should be uppercase
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.identifiers]
# Identifiers should be lowercase
capitalisation_policy = lower

[sqlfluff:rules:capitalisation.functions]
# Functions should be uppercase
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.literals]
# Literals (NULL, TRUE, FALSE) should be uppercase
capitalisation_policy = upper

[sqlfluff:rules:layout.long_lines]
# Ignore long lines in comments
ignore_comment_lines = True
ignore_comment_clauses = True

[sqlfluff:rules:aliasing.table]
# Require explicit AS for table aliases
aliasing = explicit

[sqlfluff:rules:aliasing.column]
# Require explicit AS for column aliases
aliasing = explicit

[sqlfluff:rules:aliasing.length]
# Minimum alias length
min_alias_length = 1

[sqlfluff:rules:convention.not_equal]
# Prefer != over <>
preferred_not_equal_style = c_style

[sqlfluff:rules:convention.count_rows]
# Prefer COUNT(*) over COUNT(1)
prefer_count_1 = False
prefer_count_0 = False

[sqlfluff:rules:convention.select_trailing_comma]
# Require trailing comma in SELECT lists
select_clause_trailing_comma = forbid

[sqlfluff:rules:ambiguous.column_references]
# Require qualified column references in JOINs
group_by_and_order_by_style = implicit
